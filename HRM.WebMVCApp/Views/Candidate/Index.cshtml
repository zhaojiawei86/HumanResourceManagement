@model IEnumerable<CandidateResponseModel>;
<div class="page-header">
    <h1>List of Candidates</h1>
</div>
<a asp-controller="Candidate" asp-action="Create">Add New Candidate</a>

<table class="table table-bordered table-striped table hovered">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Current Address</th>
            <th>Resume Url</th>
            <th colspan="2">Options</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach(var m in Model)
            {
                <tr>
                    <td>@m.FirstName</td>
                    <td>@m.LastName</td>
                    <td>@m.Phone</td>
                    <td>@m.Email</td>
                    <td>@m.currentAddress</td>
                    <td>@m.ResumeUrl</td>
                    <td><a asp-controller="Candidate" asp-action="Edit" asp-route-id="@m.Id">Edit</a></td>
                    <td><a asp-controller="Candidate" asp-action="Delete" asp-route-id="@m.Id">Delete</a></td>

                </tr>
            }
        }
    </tbody>
</table>