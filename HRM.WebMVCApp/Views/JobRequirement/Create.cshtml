@model JobRequirementRequestModel;
<div class="container">
    <form asp-controller="JobRequirement" asp-action="Create" method="post">
        <div class="my-5 row col-12">
            <label for="Title">Title</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title"></span>
        </div>
        <div class="my-5 row col-12">
            <label for="JobLocation">JobLocation</label>
            <input asp-for="JobLocation" class="form-control" />
            <span asp-validation-for="JobLocation"></span>
        </div>
        <div class="my-5 row col-12">
            <label for="NoOfPosition">NoOfPosition</label>
            <input asp-for="NoOfPosition" class="form-control" />
            <span asp-validation-for="NoOfPosition"></span>
        </div>
        <div class="my-5 row col-12">
            <label for="PostingDate">PostingDate</label>
            <input asp-for="PostingDate" class="form-control" />
            <span asp-validation-for="PostingDate"></span>
        </div>
        <div class="my-5 row col-12">
            <label for="ClosingDate">ClosingDate</label>
            <input asp-for="ClosingDate" class="form-control" />
            <span asp-validation-for="ClosingDate"></span>
        </div>
        <div class="my-5">
            <input type="checkbox" asp-for="IsActive" checked>
            <label for="IsActive">Is Active</label>
            <span asp-validation-for="IsActive"></span>
        </div>
        <div class="my-5 row col-12">
            <label for="Description">Description</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description"></span>
        </div>
        <div class="my-5 row col-12">
            <label for="JobCategoryId">JobCategoryId</label>
            <select class="form-control" asp-for="JobCategoryId" asp-items="@ViewBag.JobCategoryList"></select>
            <span asp-validation-for="JobCategoryId"></span>
        </div>
        

        <input type="submit" value="Add JobRequirement" class="btn btn-primary" />
    </form>
</div>