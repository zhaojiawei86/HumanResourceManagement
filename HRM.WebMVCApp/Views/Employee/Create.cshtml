@model EmployeeRequestModel;
<div class="container">
    <form asp-controller="Employee" asp-action="Create" method="post">
        <div class="my-5 row col-12">
            <label for="FirstName">First Name</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="my-5 row col-12">
            <label for="LastName">Last Name</label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName"></span>
        </div>
        <div class="my-5 row col-12">
            <label for="Phone">Phone</label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone"></span>
        </div>
        <div class="my-5 row col-12">
            <label for="EmailId">Email</label>
            <input asp-for="EmailId" class="form-control" />
            <span asp-validation-for="EmailId"></span>
        </div>
        <div class="my-5 row col-12">
            <label for="currentAddress">Current Address</label>
            <input asp-for="CurrentAddress" class="form-control" />
            <span asp-validation-for="CurrentAddress"></span>
        </div>
        <div class="my-5 row col-12">
            <label for="DOB">Date of Birth</label>
            <input asp-for="DOB" class="form-control" />
            <span asp-validation-for="DOB"></span>
        </div>

        <div class="my-5 row col-12">
            <label for="SSN">SSN</label>
            <input asp-for="SSN" class="form-control" />
            <span asp-validation-for="SSN"></span>
        </div>
        <div class="my-5 row col-12">
            <label for="HireDate">Hire Date</label>
            <input asp-for="HireDate" class="form-control" />
            <span asp-validation-for="HireDate"></span>
        </div>
        <div class="my-5 row col-12">
            <label for="EmployeeRoleId">EmployeeRole Id</label>
            <select class="form-control" asp-for="EmployeeRoleId" asp-items=@ViewBag.EmployeeRoleList></select>
            <span asp-validation-for="EmployeeRoleId"></span>
        </div>
        <div class="my-5 row col-12">
            <label for="EmployeeTypeId">EmployeeType Id</label>
            <select class="form-control" asp-for="EmployeeTypeId" asp-items=@ViewBag.EmployeeTypeList></select>
            <span asp-validation-for="EmployeeTypeId"></span>
        </div>
        <div class="my-5 row col-12">
            <label for="EndDate">End Date</label>
            <input asp-for="EndDate" class="form-control" />
            <span asp-validation-for="EndDate"></span>
        </div>
        <div class="my-5 row col-12">
            <label for="EmployeeStatusId">EmployeeStatus Id</label>
            <select class="form-control" asp-for="EmployeeStatusId" asp-items=@ViewBag.EmployeeStatusList></select>
            <span asp-validation-for="EmployeeStatusId"></span>
        </div>
        <div class="my-5 row col-12">
            <label for="ManagerId">Manager Id</label>
            <select class="form-control" asp-for="ManagerId" asp-items=@ViewBag.EmployeeList></select>
            <span asp-validation-for="ManagerId"></span>
        </div>

        <input type="submit" value="Add Employee" class="btn btn-primary" />
    </form>
</div>


       